<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Location Image Header -->
    <ImageView
        android:id="@+id/locationImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_borne" />

    <!-- Location Details Container -->
    <LinearLayout
        android:id="@+id/locationDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="ExtraText">

        <!-- Location Name -->
        <TextView
            android:id="@+id/locationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />

        <!-- Location City and Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_station"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/locationCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="City"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_station"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/locationAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Type and Charge Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_station"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/locationType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type of Location"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_station"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/locationChargeType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Charge Type"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Star Rating -->
        <RatingBar
            android:id="@+id/starRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numStars="5"
            android:rating="4"
            android:stepSize="1"
            android:layout_marginTop="16dp" />


        <!-- Reviews Button -->
        <Button
            android:id="@+id/readReviewsButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Read Reviews"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="16dp"

            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <!-- Get Directions Button -->
        <Button
            android:id="@+id/viewMapButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Get Directions"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>
