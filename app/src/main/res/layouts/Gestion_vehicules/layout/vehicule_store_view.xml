<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModel.VehiculeViewModel">

    <!-- Entête bleu en haut de la page -->

    <View
        android:id="@+id/view_entete"
        android:layout_width="418dp"
        android:layout_height="150dp"
        android:background="@drawable/entete_bleu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textAcceuil2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myfont"
        android:text="Que souhaitez-vous\nlouer aujourd'hui ?"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_entete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597" />

    <androidx.cardview.widget.CardView
        android:id="@+id/category_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_entete">

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVehicules"
        android:layout_width="447dp"
        android:layout_height="200dp"
        android:layout_marginBottom="75dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_vehicule" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/myfont"
        android:text="Catégorie"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewVehicules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/category_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116"
        app:srcCompat="@drawable/notif" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewlogo"
        android:layout_width="427dp"
        android:layout_height="106dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewVehicules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_entete"
        app:layout_constraintVertical_bias="0.728"
        tools:listitem="@layout/item_logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/myfont"
        android:text="Meilleures Marques"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_entete"
        app:layout_constraintVertical_bias="0.901" />


    <Button
        android:id="@+id/buttonViewAll"
        android:layout_width="111dp"
        android:layout_height="37dp"
        android:backgroundTint="#40FFFFFF"
        android:fontFamily="@font/myfont"
        android:text="Voir tout"
        android:textColor="@color/hintTextColor"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_entete"
        app:layout_constraintVertical_bias="0.897" />

    <Button
        android:id="@+id/textView7"
        android:layout_width="111dp"
        android:layout_height="41dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="#40FFFFFF"
        android:fontFamily="@font/myfont"
        android:text="Voir tout"
        android:textColor="@color/hintTextColor"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewVehicules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerviewlogo"
        app:layout_constraintVertical_bias="0.583" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="318dp"
        android:layout_height="183dp"
        android:layout_marginStart="92dp"

        android:src="@drawable/finale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="29dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_entete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065"
        app:srcCompat="@drawable/home" />

    <Button
        android:id="@+id/buttonaddVehicule"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/colorPrimary"
        android:color="@color/colorPrimary"

        android:fontFamily="@font/myfont"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_entete"
        app:layout_constraintVertical_bias="0.244" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonaddVehicule"
        app:layout_constraintEnd_toEndOf="@+id/buttonaddVehicule"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/buttonaddVehicule"
        app:layout_constraintTop_toTopOf="@+id/buttonaddVehicule"
        app:layout_constraintVertical_bias="0.407"
        app:srcCompat="@drawable/addcar" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELECTRI"
        android:textColor="@color/white"
        android:fontFamily="@font/myfont"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_entete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:textColor="@color/black"
        android:fontFamily="@font/myfont"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_entete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />


</androidx.constraintlayout.widget.ConstraintLayout>
