<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/blog_like_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blog_content"
        app:srcCompat="@drawable/baseline_favorite_border_24" />
    <ImageView
        android:id="@+id/blog_dislike_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blog_content"
        app:srcCompat="@drawable/baseline_favorite_border_24" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/blog_user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/purple_500"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/idrissimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/blog_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Username"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/blog_user_image"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/blog_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="'@idriss'"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/blog_user_image"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/blog_content"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Enorme baisse des prix chez Tesla, la Model 3 à partir de 41 990€.Tesla avait déjà surpris tout le monde au début de l’année en baissant considérablement le prix de ses Model 3 et Y après des mois de hausse successive. Le constructeur américain a décidé d’en remettre une couche en revoyant entièrement sa grille de tarifs en France (et dans le reste de l’Europe)."
        android:textStyle="bold"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blog_user_image" />

    <TextView
        android:id="@+id/blog_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="0 likes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/blog_like_btn"
        app:layout_constraintTop_toBottomOf="@+id/blog_content" />

    <TextView
        android:id="@+id/blog_dislike_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="0 dislikes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/blog_like_btn"
        app:layout_constraintTop_toBottomOf="@+id/blog_content" />

    <TextView
        android:id="@+id/blog_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Comments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blog_content" />

    <ImageView
        android:id="@+id/blog_comment_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/blog_comment_count"
        app:layout_constraintTop_toBottomOf="@+id/blog_content"
        app:srcCompat="@drawable/baseline_chat_bubble_outline_24" />





</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
